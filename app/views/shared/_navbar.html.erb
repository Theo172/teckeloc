<header class="header">
  <div class="header__logo">
    <%= image_tag 'teckel', class:'teck', alt:'teckel' %>
  </div>

  <div class="header__search">
    <input id= "address" type="text" placeholder="Address">
    <span></span>
    <input id="dates" type="date" placeholder="dates">
    <span></span>
  </div>

  <div class="dropdown-center">
    <button class="btn btn-link text-decoration-none dropdown-toggle" type="button" id="dropdownCenterBtn" data-bs-toggle="dropdown" aria-expanded="false">
      <%= image_tag 'teckel-item', alt:"teckel", class:"avatar dropdown-toggle" %> for more
    </button>
      <ul class="dropdown-menu">
        <% if user_signed_in? %>
        <li><%= link_to "Dashboard", profile_path, class: "dropdown-item" %></li>
        <li><%= link_to "Add your teckel", new_teckel_path, class: "dropdown-item" %></li>
        <li><%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %></li>
        <% else %>
        <li><%= link_to "Login", user_session_path, class: "dropdown-item" %></li>
        <li><%= link_to "Register", user_registration_path, class: "dropdown-item" %></li>
        <% end %>
      </ul>
  </div>
</header>
