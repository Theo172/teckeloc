<h2 class="sign_in_title">Log in</h2>

<div class="new_container">

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="sign_up_container">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "form_input" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "form_input" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn-cutie" %>
  </div>
<% end %>
</div>
