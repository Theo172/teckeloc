<%= @teckel.name %>
<%= cl_image_tag @teckel.photo.key, height: 300, width: 400, crop: :fill %>
<% if user_signed_in? %>
    <%= link_to "edit", edit_teckel_path(@teckel) %>
    <%= link_to "delete", teckel_path(@teckel), method: :delete%>
  <% end %>
  <%= simple_form_for [@teckel, @reservation] do |f| %>
  <%= f.input :starting_date %>
  <%= f.input :ending_date %>
  <%= f.button :submit %>
<% end %>

