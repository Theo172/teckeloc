<%= simple_form_for @teckel do |f| %>
  <%= f.input :name %>
  <%= f.input :hair, collection: Teckel::HAIR %>
  <%= f.input :species, collection: Teckel::SPECIES %>
  <%= f.input :color %>
  <%= f.input :age %>
  <%= f.input :sex, collection: Teckel::SEX  %>
  <%= f.input :address %>
  <%= f.input :special_features %>
  <%= f.input :description %>
  <%= f.input :anecdote %>
  <%= f.input :price %>
  <%= f.input :photo, as: :file %>
  <%= f.button :submit %>
<% end %>

<%= link_to "back", teckels_path %>
